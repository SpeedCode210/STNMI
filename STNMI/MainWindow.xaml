        xmlns:local="clr-namespace:STNMI"
        mc:Ignorable="d"
        Title="Eclipium STNMI" Height="700" Width="1200" WindowStyle="None" Background="Transparent" AllowsTransparency="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Border Background="#151515" BorderThickness="10" BorderBrush="Transparent" CornerRadius="20">
            <Grid>
                <Button Content="X" Click="Button_Click" HorizontalAlignment="Left" Margin="1126,10,0,0" VerticalAlignment="Top" Height="30" Width="30" FontSize="19" BorderBrush="{x:Null}"  Foreground="White" OpacityMask="#FF464646">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#151515"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF353535"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Image Source="/STNMI.ico" Height="50" Width="50" Margin="23,11,1107,619" />
                <Label Foreground="White" Content="Eclipium STNMI" VerticalContentAlignment="Center" FontSize="25" FontWeight="Bold" Margin="65,10,47,619"  />
